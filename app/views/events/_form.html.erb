<% form_for @event do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :starts_at %><br />
    <%= f.calendar_date_select :starts_at %>
  </p>
  <p>
    <%= f.label :ends_at %><br />
    <%= f.calendar_date_select :ends_at %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
